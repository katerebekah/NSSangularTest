extends layout

block content
  h1= title
  p {{name}} is my name

  input(type='text' ng-model='adj')
  h3 {{name}} is {{adj}}

  label Click to how a message
    input(type='checkbox', ng-model='seeMessage')
  h4 seeMessage: {{seeMessage}}
  h1(ng-show='seeMessage') Angular is my cousin on my mother's side

  pre{{instructors | json}}

  p Search:
  input(type='text', ng-model='query')
  ul
    li(ng-repeat='instructor in instructors | filter:query') {{instructor.name}}
      ul
        li allergies: {{instructor.allergies}}